// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  address         String?   @db.VarChar(50)
  fname           String    @db.VarChar(200)
  lname           String    @db.VarChar(200)
  dob             DateTime? @db.DateTime()
  email           String    @unique @db.VarChar(80)
  companyName     String    @db.VarChar(80)
  password        String    @db.VarChar(200)
  isVerified      Boolean?  @default(false)
  googleAuthToken String?   @db.VarChar(50)
  phoneNumber     Int       @db.Int
  username        String?   @unique @db.VarChar(50)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  Posts           Post[]

  @@map("users")
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(50)
  description String    @db.VarChar(200)
  imageUrl    String?   @db.VarChar(200)
  user        User?     @relation(fields: [userId], references: [id])
  userId      Int?      @db.Int
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  Int?      @db.Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completed   Int       @default(0) @db.TinyInt

  @@map("todos")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(60)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Post      Post[]

  @@map("categories")
}
